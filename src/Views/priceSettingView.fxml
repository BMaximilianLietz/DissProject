<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.PriceSettingController" >
    <top>
        <MenuBar fx:id="menuBar" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" prefWidth="1920">
            <Menu text="Navigation">
                <MenuItem text="Open Project View" onAction="#openProjectViewMenuItemClick"></MenuItem>
                <MenuItem text="Open Product View" onAction="#openProductViewMenuItemClick"></MenuItem>
            </Menu>
            <Menu text="Menu 2">
                <MenuItem text="Menu sub-item 1"></MenuItem>
                <MenuItem text="Menu sub-item 2"></MenuItem>
                <MenuItem text="Menu sub-item 3"></MenuItem>
                <MenuItem text="Menu sub-item 4"></MenuItem>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <GridPane fx:id="gridPaneMeta" hgap="10" vgap="10" >

        </GridPane>

        <GridPane fx:id="gridPane" alignment="TOP_LEFT" hgap="10" vgap="10" >
            <!--    -->
            <Label text="Project Name" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <padding><Insets left="20"/></padding>
            </Label>
            <Label fx:id="projectName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Product Name" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label fx:id="productName" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="Product Cost" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
            <Label fx:id="productCost" GridPane.columnIndex="5" GridPane.rowIndex="0"/>

            <Label text="Running Costs" GridPane.columnIndex="6" GridPane.rowIndex="0"/>
            <Label fx:id="productRunningCosts" GridPane.columnIndex="7" GridPane.rowIndex="0"/>

            <Label text="Commoditization" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"
                   alignment="BASELINE_CENTER" style="-fx-font-weight: bold">
                <padding><Insets left="20"/></padding>
            </Label>
            <!--  COLUMNS 1 & 2  -->

            <!-- Row 1
                Also, how to make input field numerical
            -->

            <Label text="Number of customers:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="numberCustomersTF" GridPane.columnIndex="1" GridPane.rowIndex="2">
            </TextField>

            <Label text="Number of customers&#10;at maximum price (see right):" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="numberCustomersMaxPriceTF" GridPane.columnIndex="1" GridPane.rowIndex="3">
            </TextField>

            <!-- Row 2  -->

            <Label text="Does the product require&#10;pre-processing" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="preProcessingCB" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Yes"/>
                        <String fx:value="No"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 3  -->

            <Label text="Item imitability:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="itemImitabilityCB" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Easy replication"/>
                        <String fx:value="Medium replication effort"/>
                        <String fx:value="Difficult replication"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Degree of price&#10;competition:" GridPane.columnIndex="0" GridPane.rowIndex="6">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="degreePriceCompetitionCB" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Perfect Price Competition"/>
                        <String fx:value="Focus on Price Competition"/>
                        <String fx:value="Focus on Product Differentiation"/>
                        <String fx:value="Perfect Product Differentiation"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Program customizability:" GridPane.columnIndex="0" GridPane.rowIndex="7">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="customizabilityCB" GridPane.columnIndex="1" GridPane.rowIndex="7">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="No customizability"/>
                        <String fx:value="Minor customizability"/>
                        <String fx:value="Notable customizability"/>
                        <String fx:value="Significant customizability"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Former COLUMNS 4 & 5 -->

            <!-- Row 1
                    How to calculate revenue maximization and what to do with it?
            -->

            <Label text="Commoditization" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2"
                   alignment="BASELINE_CENTER" style="-fx-font-weight: bold">
                <padding><Insets left="20"/></padding>
            </Label>

            <Label text="Pricing Goal" GridPane.columnIndex="0" GridPane.rowIndex="9">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="pricingGoalCB" GridPane.columnIndex="1" GridPane.rowIndex="9"
                      onAction="#priceComboBoxChange">
                <items>
                    <FXCollections fx:factory="observableArrayList" >
                        <String fx:value="Market share maximization"/>
                        <String fx:value="Market skimming"/>
                        <String fx:value="Revenue maximization"/>
                        <String fx:value="None"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 2  -->

            <Label text="Time Period:" GridPane.columnIndex="0" GridPane.rowIndex="10">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="timePeriodCB" GridPane.columnIndex="1" GridPane.rowIndex="10"
                      onAction="#priceComboBoxChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="One-time"/>
                        <String fx:value="6 Months"/>
                        <String fx:value="1 Year"/>
                        <String fx:value="3 Years"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 3
                Find a better word than depreciation?
            -->
            <Label text="Depreciation per year in %" GridPane.columnIndex="0" GridPane.rowIndex="11">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="depreciationTF" GridPane.columnIndex="1" GridPane.rowIndex="11">
            </TextField>

            <!-- Row 4  -->

            <Label text="Customer price expectations:" GridPane.columnIndex="0" GridPane.rowIndex="12">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="customerExpectationsCB" GridPane.columnIndex="1" GridPane.rowIndex="12"
                      onAction="#priceComboBoxChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Significant price reduction"/>
                        <String fx:value="Medium price reduction"/>
                        <String fx:value="Low price reduction"/>
                        <String fx:value="No price reduction"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Label text="Importance of customer price expectations:" GridPane.columnIndex="0" GridPane.rowIndex="13">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="customerExpectationImportanceCB" GridPane.columnIndex="1" GridPane.rowIndex="13"
                      onAction="#priceComboBoxChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Significant"/>
                        <String fx:value="Medium"/>
                        <String fx:value="Insignificant"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 5  -->
            <!-- TODO add price clusters (so it doesn't exceed it or continues to approach it)-->

            <Label text="Competition pressure related price
             &#10;reductions:" GridPane.columnIndex="0" GridPane.rowIndex="14">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="competitionRelatedPriceReductionCB" GridPane.columnIndex="1" GridPane.rowIndex="14"
                      onAction="#priceComboBoxChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Significant"/>
                        <String fx:value="Medium"/>
                        <String fx:value="Unrelated"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Minimum price:" GridPane.columnIndex="0" GridPane.rowIndex="15">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="minimumPricePDTF" GridPane.columnIndex="1" GridPane.rowIndex="15"/>

            <Button GridPane.columnIndex="0" GridPane.rowIndex="16" onAction="#priceDevelopmentBtnClick">
                Price development
            </Button>

            <!--
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="18" GridPane.rowSpan="4" GridPane.columnSpan="2">
                <padding><Insets left="20"/></padding>
                <Label text="Help Box" />
                <Text fx:id="helpBoxTXT"/>
            </VBox>
            -->


            <!-- COLUMNS 2 & 3 -->

            <!-- Row 1  -->

            <Label text="Preferred pricing strategy:" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="pricingStrategyCB" GridPane.columnIndex="3" GridPane.rowIndex="2" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Cost-based pricing"/>
                        <String fx:value="Value-driven pricing"/>
                        <!-- <String fx:value="Target-driven pricing"/> -->
                        <String fx:value="Competition-based pricing"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 2  -->

            <Label text="Desired margin:" GridPane.columnIndex="2" GridPane.rowIndex="3">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="desiredMarginTF" GridPane.columnIndex="3" GridPane.rowIndex="3"  promptText="Margin in %">
            </TextField>

            <!-- Row 3  -->

            <Label text="Desired markup:" GridPane.columnIndex="2" GridPane.rowIndex="4">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="desiredMarkupTF" GridPane.columnIndex="3" GridPane.rowIndex="4"  promptText="Markup in %">
            </TextField>

            <Label text="Highest price customers&#10;are willing to pay" GridPane.columnIndex="2" GridPane.rowIndex="5">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="customerHighestPriceTF" GridPane.columnIndex="3" GridPane.rowIndex="5"  promptText="Highest potential price">
            </TextField>

            <!-- Row 4  -->

            <Label text="Allowed variance:" GridPane.columnIndex="2" GridPane.rowIndex="6">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="allowedVarianceTF" GridPane.columnIndex="3" GridPane.rowIndex="6"  promptText="Variance in %">
            </TextField>

            <!-- Row 3  -->

            <Label text="Value added to individual customer" GridPane.columnIndex="2" GridPane.rowIndex="7">
                <padding><Insets left="20"/></padding>
            </Label>
            <TextField fx:id="valueAddedTF" GridPane.columnIndex="3" GridPane.rowIndex="7" promptText="Value added">
            </TextField>

            <!-- Row 4  -->

            <Label text="Network effects:" GridPane.columnIndex="2" GridPane.rowIndex="8">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="targetCB" GridPane.columnIndex="3" GridPane.rowIndex="8" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="No network effects"/>
                        <String fx:value="Minor network effects"/>
                        <String fx:value="Medium network effects"/>
                        <String fx:value="Strong network effects"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- /* ADD A TEXTFIELD BASED ON RESULT OF ABOVE DROPDOWN FOR USER TO TYPE IN SALES OR REVENUE*/ -->

            <!-- Row 5  -->

            <Label text="Competition orientation:" GridPane.columnIndex="2" GridPane.rowIndex="9">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox GridPane.columnIndex="3" GridPane.rowIndex="9" fx:id="competitorOrientationCB"
            onAction="#competitorOrientationComboBoxChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Competitor-driven"/>
                        <String fx:value="Differentiation Orientation"/>
                        <String fx:value="Both"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- /* How to implement competitors */ -->

            <!-- Row 6 -->

            <Label text="Industry price clustering:" GridPane.columnIndex="2" GridPane.rowIndex="10">
                <!-- <padding><Insets left="20" top="40"/></padding> -->
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="priceClusteringCB" GridPane.columnIndex="3" GridPane.rowIndex="10" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="No"/>
                        <String fx:value="Yes"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Item quality:" GridPane.columnIndex="4" GridPane.rowIndex="2">
                <padding><Insets left="20"/></padding>
            </Label>
            <Slider GridPane.columnIndex="5" GridPane.rowIndex="2"
                    majorTickUnit="10" showTickMarks="true"
                    fx:id="itemQualitySl" minorTickCount="0"/>

            <Label text="Item quality importance:" GridPane.columnIndex="4" GridPane.rowIndex="3">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="itemQualityCB" GridPane.columnIndex="5" GridPane.rowIndex="3" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Insignificant"/>
                        <String fx:value="Medium"/>
                        <String fx:value="Significant"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 8  -->
            <Label text="Market saturation:" GridPane.columnIndex="4" GridPane.rowIndex="4">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="marketSaturationCB" GridPane.columnIndex="5" GridPane.rowIndex="4" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Saturated"/>
                        <String fx:value="Medium"/>
                        <String fx:value="Growing"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 9  -->

            <Label text="Market segmentation:" GridPane.columnIndex="4" GridPane.rowIndex="5">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="isMarketSegmentedCB" GridPane.columnIndex="5" GridPane.rowIndex="5" >
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Yes"/>
                        <String fx:value="No"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- /* ADD A TEXTFIELD BASED ON RESULT OF ABOVE DROPDOWN FOR DISCOUNT AS INPUT */ -->

            <!-- Row 10  -->

            <Label text="Brand value:" GridPane.columnIndex="4" GridPane.rowIndex="6">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="brandValueCB" GridPane.columnIndex="5" GridPane.rowIndex="6" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Low importance"/>
                        <String fx:value="Renowned brand"/>
                        <String fx:value="Unique Selling Proposition"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 11  -->

            <Label text="Distribution Channel:" GridPane.columnIndex="4" GridPane.rowIndex="7">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="distributionChannelCB" GridPane.columnIndex="5" GridPane.rowIndex="7" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Online"/>
                        <!--
                        <String fx:value="Via own physical distribution"/>
                        <String fx:value="Via retailers"/>
                        -->
                        <String fx:value="Other"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 12  -->

            <Label text="Price elasticity:" GridPane.columnIndex="4" GridPane.rowIndex="8">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="priceElasticityCB" GridPane.columnIndex="5" GridPane.rowIndex="8" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Absolute elasticity"/>
                        <String fx:value="Elastic"/>
                        <String fx:value="Neither"/>
                        <String fx:value="Inelastic"/>
                        <String fx:value="Absolute Inelastic"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Customer interdependencies:" GridPane.columnIndex="4" GridPane.rowIndex="9">
                <padding><Insets left="20"/></padding>
            </Label>
            <ComboBox fx:id="interdependenciesCB" GridPane.columnIndex="5" GridPane.rowIndex="9" onAction="#comboBoxItemChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="No existing interdependencies"/>
                        <String fx:value="Medium interdependencies"/>
                        <String fx:value="Interdependencies exist"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label GridPane.columnIndex="4" GridPane.rowIndex="11">Proposed Price per customer:</Label>
            <Label fx:id="proposedPricePerCustomerLB" GridPane.columnIndex="5" GridPane.rowIndex="11"/>

            <!-- Row 13  -->
            <Button GridPane.columnIndex="4" GridPane.rowIndex="12" onAction="#priceSettingSubmitBtnClick">
                Submit Price Setting
            </Button>
            <!--
            <Button GridPane.columnIndex="4" GridPane.rowIndex="4" onAction="#testSubscription">
                Test subscription
            </Button>
            -->

            <Label GridPane.columnIndex="6" GridPane.rowIndex="1">Proposed Strategy:</Label>
            <Text fx:id="proposedStrategyTX" GridPane.columnIndex="7" GridPane.rowIndex="1"/>

